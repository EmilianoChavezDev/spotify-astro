---
import HomeIcon from "../../public/icons/Home.astro";
import LibraryIcon from "../../public/icons/Library.astro";
import SearchIcon from "../../public/icons/Search.astro";
import SideMenu from "./SideMenu.astro";

import { playlists } from "@/lib/data";
import SideMenuCard from "./SideMenuCard.astro";
import AddIcon from "public/icons/Add.astro";
import ArrowIcon from "public/icons/Arrow.astro";
---

<nav class="flex flex-col flex-1 gap-2">
    <div class="bg-zinc-900 rounded-lg p-2">
        <ul>
            <SideMenu href="/">
                <HomeIcon />
                Inicio
            </SideMenu>
            <SideMenu href="/search">
                <SearchIcon />
                Buscar
            </SideMenu>
        </ul>
    </div>

    <div class="bg-zinc-900 rounded-lg p-2 flex-1">
        <ul>
            <div class="flex items-center justify-between">
                <SideMenu href="/">
                    <LibraryIcon />
                    Tu Biblioteca
                </SideMenu>
                <div class="flex items-center gap-3">
                    <div class="hover:cursor-pointer hover:text-white">
                        <AddIcon />
                    </div>
                    <div class="hover:cursor-pointer">
                        <ArrowIcon />
                    </div>
                </div>
            </div>
            {playlists.map((playlist) => <SideMenuCard playlist={playlist} />)}
        </ul>
    </div>
</nav>
